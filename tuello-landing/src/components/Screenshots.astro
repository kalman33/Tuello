---
import { t } from '../i18n/translations';

interface Props {
  lang: 'en' | 'fr';
}

const { lang } = Astro.props;

const screenshots = [
  {
    image: "/images/Tuello-recorder.jpg",
    titleKey: 'screenshots.mock.title' as const,
    descKey: 'screenshots.mock.desc' as const
  },
  {
    image: "/images/Tuello-tracking.jpg",
    titleKey: 'screenshots.track.title' as const,
    descKey: 'screenshots.track.desc' as const
  },
  {
    image: "/images/Tuello-search-elements.jpg",
    titleKey: 'screenshots.search.title' as const,
    descKey: 'screenshots.search.desc' as const
  },
  {
    image: "/images/Tuello-json-formater.jpg",
    titleKey: 'screenshots.json.title' as const,
    descKey: 'screenshots.json.desc' as const
  },
  {
    image: "/images/Tuello-settings.jpg",
    titleKey: 'screenshots.settings.title' as const,
    descKey: 'screenshots.settings.desc' as const
  },
  {
    image: "/images/Tuello-replay.jpg",
    titleKey: 'screenshots.spy.title' as const,
    descKey: 'screenshots.spy.desc' as const
  }
];
---

<section id="screenshots" class="section screenshots">
  <div class="container">
    <h2 class="section-title">
      {t(lang, 'screenshots.title.1')} <span class="gradient-text">{t(lang, 'screenshots.title.2')}</span>
    </h2>
    <p class="section-subtitle">
      {t(lang, 'screenshots.subtitle')}
    </p>

    <div class="screenshots-grid">
      {screenshots.map((item, index) => (
        <div class="screenshot-card" style={`--delay: ${index * 0.1}s`} data-image={item.image} data-title={t(lang, item.titleKey)}>
          <div class="screenshot-image">
            <img src={item.image} alt={t(lang, item.titleKey)} loading="lazy" />
            <div class="screenshot-overlay">
              <span class="zoom-icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="11" cy="11" r="8"/>
                  <path d="m21 21-4.3-4.3"/>
                  <path d="M11 8v6"/>
                  <path d="M8 11h6"/>
                </svg>
              </span>
            </div>
          </div>
          <div class="screenshot-info">
            <h3 class="screenshot-title">{t(lang, item.titleKey)}</h3>
            <p class="screenshot-description">{t(lang, item.descKey)}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<!-- Lightbox Modal -->
<div id="lightbox" class="lightbox">
  <button class="lightbox-close" aria-label="Close">&times;</button>
  <div class="lightbox-content">
    <img id="lightbox-img" src="" alt="" />
    <p id="lightbox-title" class="lightbox-title"></p>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const lightbox = document.getElementById('lightbox');
    const lightboxImg = document.getElementById('lightbox-img') as HTMLImageElement;
    const lightboxTitle = document.getElementById('lightbox-title');
    const closeBtn = document.querySelector('.lightbox-close');
    const cards = document.querySelectorAll('.screenshot-card');

    cards.forEach(card => {
      card.addEventListener('click', () => {
        const image = card.getAttribute('data-image');
        const title = card.getAttribute('data-title');
        if (lightboxImg && image) lightboxImg.src = image;
        if (lightboxImg && title) lightboxImg.alt = title;
        if (lightboxTitle && title) lightboxTitle.textContent = title;
        if (lightbox) lightbox.classList.add('active');
        document.body.style.overflow = 'hidden';
      });
    });

    const closeLightbox = () => {
      if (lightbox) lightbox.classList.remove('active');
      document.body.style.overflow = '';
    };

    closeBtn?.addEventListener('click', closeLightbox);
    lightbox?.addEventListener('click', (e) => {
      if (e.target === lightbox) closeLightbox();
    });
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') closeLightbox();
    });
  });
</script>

<style>
  .lightbox {
    display: none;
    position: fixed;
    inset: 0;
    z-index: 9999;
    background: rgba(0, 0, 0, 0.9);
    backdrop-filter: blur(5px);
    align-items: center;
    justify-content: center;
    padding: 20px;
  }

  .lightbox.active {
    display: flex;
  }

  .lightbox-close {
    position: absolute;
    top: 20px;
    right: 30px;
    font-size: 40px;
    color: white;
    background: none;
    border: none;
    cursor: pointer;
    opacity: 0.7;
    transition: opacity 0.3s;
    z-index: 10000;
  }

  .lightbox-close:hover {
    opacity: 1;
  }

  .lightbox-content {
    max-width: 90vw;
    max-height: 90vh;
    text-align: center;
  }

  .lightbox-content img {
    max-width: 100%;
    max-height: 80vh;
    border-radius: 8px;
    box-shadow: 0 10px 50px rgba(0, 0, 0, 0.5);
  }

  .lightbox-title {
    color: white;
    margin-top: 16px;
    font-size: 1.1rem;
    font-weight: 500;
  }
</style>

<style>
  .screenshots {
    background: linear-gradient(180deg, var(--color-bg-light) 0%, var(--color-bg) 100%);
  }

  .screenshots-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 30px;
  }

  .screenshot-card {
    background: rgba(26, 26, 46, 0.4);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: var(--radius);
    overflow: hidden;
    transition: all 0.3s ease;
    animation: fadeInUp 0.6s ease forwards;
    animation-delay: var(--delay);
    opacity: 0;
    cursor: pointer;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .screenshot-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 60px rgba(31, 88, 108, 0.2);
    border-color: rgba(31, 88, 108, 0.4);
  }

  .screenshot-image {
    position: relative;
    overflow: hidden;
  }

  .screenshot-image img {
    display: block;
    width: 100%;
    height: auto;
    transition: transform 0.5s ease;
  }

  .screenshot-card:hover .screenshot-image img {
    transform: scale(1.05);
  }

  .screenshot-overlay {
    position: absolute;
    inset: 0;
    background: rgba(31, 88, 108, 0.85);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .screenshot-card:hover .screenshot-overlay {
    opacity: 1;
  }

  .zoom-icon {
    color: white;
    transform: scale(0.8);
    transition: transform 0.3s ease;
  }

  .screenshot-card:hover .zoom-icon {
    transform: scale(1);
  }

  .screenshot-info {
    padding: 24px;
  }

  .screenshot-title {
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 8px;
  }

  .screenshot-description {
    color: var(--color-text-muted);
    font-size: 0.9rem;
  }

  @media (max-width: 768px) {
    .screenshots-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
