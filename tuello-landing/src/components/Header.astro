---
import LanguageSwitcher from './LanguageSwitcher.astro';
import { t } from '../i18n/translations';

interface Props {
  lang: 'en' | 'fr';
}

const { lang } = Astro.props;
const homeUrl = lang === 'en' ? '/' : '/fr/';
---

<header class="header">
  <div class="container header-content">
    <a href={homeUrl} class="logo">
      <img src="/images/tuello-128x128.png" alt="Tuello" class="logo-icon" />
      <span class="logo-text">Tuello</span>
    </a>
    <nav class="nav">
      <a href="#features">{t(lang, 'nav.features')}</a>
      <a href="#demo">{t(lang, 'nav.demo')}</a>
      <a href="#screenshots">{t(lang, 'nav.screenshots')}</a>
      <a href="https://github.com/kalman33/Tuello" target="_blank" rel="noopener">GitHub</a>
    </nav>
    <div class="header-actions">
      <LanguageSwitcher lang={lang} />
      <a
        href="https://chromewebstore.google.com/detail/tuello/keggceicipngaimacccgmcfbbnmnldoc"
        class="btn btn-primary"
        target="_blank"
        rel="noopener"
      >
        <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 0C8.21 0 4.831 1.757 2.632 4.501l3.953 6.848A5.454 5.454 0 0 1 12 6.545h10.691A12 12 0 0 0 12 0zM1.931 5.47A11.943 11.943 0 0 0 0 12c0 6.012 4.42 10.991 10.189 11.864l3.953-6.847a5.45 5.45 0 0 1-6.865-2.29zm13.342 2.166a5.446 5.446 0 0 1 1.45 7.09l.002.001h-.002l-3.952 6.848a12.065 12.065 0 0 0 1.229.045c6.627 0 12-5.373 12-12 0-1.006-.124-1.983-.357-2.917z"/>
        </svg>
        {t(lang, 'nav.install')}
      </a>
    </div>
    <button class="mobile-menu-btn" aria-label="Toggle menu">
      <span></span>
      <span></span>
      <span></span>
    </button>
  </div>
</header>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    background: rgba(15, 15, 26, 0.9);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(31, 88, 108, 0.1);
  }

  .header-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 72px;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 10px;
    font-weight: 700;
    font-size: 1.4rem;
    color: var(--color-text);
  }

  .logo:hover {
    color: var(--color-text);
  }

  .logo-icon {
    width: 40px;
    height: 40px;
    border-radius: 10px;
    object-fit: contain;
  }

  .nav {
    display: flex;
    gap: 32px;
  }

  .nav a {
    color: var(--color-text-muted);
    font-weight: 500;
    transition: color 0.3s ease;
  }

  .nav a:hover {
    color: var(--color-primary);
  }

  .header-actions {
    display: flex;
    align-items: center;
    gap: 16px;
  }

  .mobile-menu-btn {
    display: none;
    flex-direction: column;
    gap: 5px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 5px;
  }

  .mobile-menu-btn span {
    width: 24px;
    height: 2px;
    background: var(--color-text);
    transition: all 0.3s ease;
  }

  @media (max-width: 768px) {
    .nav {
      display: none;
    }

    .header-actions .btn {
      display: none;
    }

    .mobile-menu-btn {
      display: flex;
    }
  }
</style>
