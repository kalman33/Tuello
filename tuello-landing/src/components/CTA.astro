---
import { t } from '../i18n/translations';

interface Props {
  lang: 'en' | 'fr';
}

const { lang } = Astro.props;
---

<section class="section cta">
  <div class="container">
    <div class="cta-content">
      <div class="cta-bg"></div>
      <h2 class="cta-title">
        {t(lang, 'cta.title.1')} <span class="gradient-text">{t(lang, 'cta.title.2')}</span> ?
      </h2>
      <p class="cta-subtitle">
        {t(lang, 'cta.subtitle')}
      </p>
      <div class="cta-buttons">
        <a
          href="https://chromewebstore.google.com/detail/tuello/keggceicipngaimacccgmcfbbnmnldoc"
          class="btn btn-primary"
          target="_blank"
          rel="noopener"
        >
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 0C8.21 0 4.831 1.757 2.632 4.501l3.953 6.848A5.454 5.454 0 0 1 12 6.545h10.691A12 12 0 0 0 12 0zM1.931 5.47A11.943 11.943 0 0 0 0 12c0 6.012 4.42 10.991 10.189 11.864l3.953-6.847a5.45 5.45 0 0 1-6.865-2.29zm13.342 2.166a5.446 5.446 0 0 1 1.45 7.09l.002.001h-.002l-3.952 6.848a12.065 12.065 0 0 0 1.229.045c6.627 0 12-5.373 12-12 0-1.006-.124-1.983-.357-2.917z"/>
          </svg>
          {t(lang, 'cta.button.install')}
        </a>
        <a href="https://github.com/kalman33/Tuello" class="btn btn-secondary" target="_blank" rel="noopener">
          {t(lang, 'cta.button.github')}
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .cta {
    background: var(--color-bg);
  }

  .cta-content {
    position: relative;
    text-align: center;
    padding: 80px 40px;
    background: linear-gradient(135deg, rgba(31, 88, 108, 0.15) 0%, rgba(235, 155, 59, 0.08) 100%);
    border: 1px solid rgba(31, 88, 108, 0.3);
    border-radius: 24px;
    overflow: hidden;
  }

  .cta-bg {
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at 20% 80%, rgba(31, 88, 108, 0.2) 0%, transparent 50%),
                radial-gradient(circle at 80% 20%, rgba(235, 155, 59, 0.15) 0%, transparent 50%);
    pointer-events: none;
  }

  .cta-title {
    position: relative;
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 16px;
  }

  .cta-subtitle {
    position: relative;
    font-size: 1.15rem;
    color: var(--color-text-muted);
    max-width: 500px;
    margin: 0 auto 32px;
  }

  .cta-buttons {
    position: relative;
    display: flex;
    gap: 16px;
    justify-content: center;
    flex-wrap: wrap;
  }

  @media (max-width: 768px) {
    .cta-content {
      padding: 50px 24px;
    }

    .cta-title {
      font-size: 1.8rem;
    }
  }
</style>
