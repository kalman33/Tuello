---
import { t } from '../i18n/translations';

interface Props {
  lang: 'en' | 'fr';
}

const { lang } = Astro.props;

const features = [
  {
    icon: `<svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 12a9 9 0 0 1-9 9m9-9a9 9 0 0 0-9-9m9 9H3m9 9a9 9 0 0 1-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 0 1 9-9"/></svg>`,
    titleKey: 'features.mock.title' as const,
    descKey: 'features.mock.desc' as const,
    color: "#1f586c"
  },
  {
    icon: `<svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"/><path d="m21 21-4.3-4.3"/></svg>`,
    titleKey: 'features.search.title' as const,
    descKey: 'features.search.desc' as const,
    color: "#9b59b6"
  },
  {
    icon: `<svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/><polyline points="14 2 14 8 20 8"/><line x1="16" y1="13" x2="8" y2="13"/><line x1="16" y1="17" x2="8" y2="17"/><polyline points="10 9 9 9 8 9"/></svg>`,
    titleKey: 'features.json.title' as const,
    descKey: 'features.json.desc' as const,
    color: "#3498db"
  },
  {
    icon: `<svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M2 12s3-7 10-7 10 7 10 7-3 7-10 7-10-7-10-7Z"/><circle cx="12" cy="12" r="3"/></svg>`,
    titleKey: 'features.track.title' as const,
    descKey: 'features.track.desc' as const,
    color: "#f39c12"
  },
  {
    icon: `<svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><polygon points="10 8 16 12 10 16 10 8"/></svg>`,
    titleKey: 'features.spy.title' as const,
    descKey: 'features.spy.desc' as const,
    color: "#eb9b3b"
  }
];
---

<section id="features" class="section features">
  <div class="container">
    <h2 class="section-title">
      {t(lang, 'features.title.1')} <span class="gradient-text">{t(lang, 'features.title.2')}</span>
    </h2>
    <p class="section-subtitle">
      {t(lang, 'features.subtitle')}
    </p>

    <div class="features-grid">
      {features.map((feature) => (
        <div class="feature-card" style={`--feature-color: ${feature.color}`}>
          <div class="feature-icon" set:html={feature.icon} />
          <h3 class="feature-title">{t(lang, feature.titleKey)}</h3>
          <p class="feature-description">{t(lang, feature.descKey)}</p>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .features {
    background: linear-gradient(180deg, var(--color-bg) 0%, var(--color-bg-light) 100%);
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 24px;
  }

  .feature-card {
    background: rgba(26, 26, 46, 0.6);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: var(--radius);
    padding: 32px;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .feature-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: var(--feature-color);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .feature-card:hover {
    transform: translateY(-5px);
    border-color: var(--feature-color);
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
  }

  .feature-card:hover::before {
    opacity: 1;
  }

  .feature-icon {
    width: 60px;
    height: 60px;
    background: rgba(255, 255, 255, 0.03);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 20px;
    color: var(--feature-color);
  }

  .feature-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 12px;
  }

  .feature-description {
    color: var(--color-text-muted);
    font-size: 0.95rem;
    line-height: 1.6;
  }

  @media (max-width: 768px) {
    .features-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
